{
  "compilerOptions": {
    "incremental": true,
    "target": "esNext",
    "module": "commonjs",

    "allowJs": true,

    "declaration": true,

    "sourceMap": true,

    "outDir": "lib",
    "rootDir": ".",

    "moduleResolution": "node",

    "esModuleInterop": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
